{
  "compilerOptions": {
    /* Language & module settings */
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020"],
    "moduleResolution": "node",

    /* Output */
    "rootDir": "src",
    "outDir": "dist",
    "sourceMap": true,

    /* Node typings & interop */
    "types": ["node"],
    "esModuleInterop": true,
    "resolveJsonModule": true,

    /* Strictness & code quality */
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
